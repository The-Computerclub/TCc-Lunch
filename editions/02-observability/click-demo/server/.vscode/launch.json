{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "run file",
      "program": "${file}",
      "args": [],
      "env": {
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/transpiled/**/*.js"],
      "preLaunchTask": "build",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "server",
      "program": "${workspaceFolder}/src/program.ts",
      "args": ["server", "--port", "8080"],
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/transpiled/**/*.js"],
      "preLaunchTask": "build",
      "outputCapture": "std"
    }
  ]
}
